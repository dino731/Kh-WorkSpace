<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boardMapper">

<resultMap id="boardResultSet" type="com.kh.board.model.vo.Board">
	<id column="BOARD_NO" property="boardNo"/>
	<result column="BOARD_TITLE" property="boardTitle"/>
	<result column="USER_ID" property="boardWriter"/>
	<result column="COUNT" property="count"/>
	<result column="CREATE_DATE" property="createDate"/>
	<result column="BOARD_CONTENT" property="boardContent"/>
</resultMap>
<select id="selectListCount" resultType="int">
	SELECT COUNT(*)
	FROM BOARD
	WHERE STATUS = 'Y'
</select>
<select id="selectList" resultMap="boardResultSet">
	SELECT  BOARD_NO,
			BOARD_TITLE,
			USER_ID,
			COUNT,
			CREATE_DATE
	FROM BOARD B
	JOIN MEMBER ON (BOARD_WRITER = USER_NO)
	WHERE B.STATUS = 'Y'
	ORDER BY BOARD_NO DESC
</select>
<update id="boardCount" resultType="int">
	UPDATE BOARD SET COUNT = COUNT+1
	WHERE BOARD_NO = #{BOARD_NO}
		AND STATUS = 'Y'
</update>
<select id="boardDetailList" resultMap="boardResultSet">
	SELECT BOARD_NO,
			BOARD_TITLE,
			USER_ID,
			COUNT,
			CREATE_DATE,
			BOARD_CONTENT
	FROM BOARD
	WHERE BOARD_NO = #{BOARD_NO}
		AND STATUS = 'Y'
</select>
<select id="selectSearchCount" resultType="int" parameterType="hashMap">
	SELECT COUNT(*)
	FROM BOARD B
	JOIN MEMBER ON (BOARD_WRITER = USER_NO)
	WHERE B.STATUS = 'Y'
	<if test="condition == 'title'">
		AND BOARD_TITLE
	</if>
	<if test="condition == 'content'">
		AND BOARD_CONTENT
	</if>
	<if test="condition == 'writer'">
		AND USER_ID 
	</if>
		LIKE '%' || #{keyword} || '%'
</select>
<select id="selectSearchList" resultMap="boardResultSet" parameterType="hashMap">
	SELECT  BOARD_NO,
			BOARD_TITLE,
			USER_ID,
			COUNT,
			CREATE_DATE
	FROM BOARD B
	JOIN MEMBER ON (BOARD_WRITER = USER_NO)
	WHERE B.STATUS = 'Y'
	<choose>
		<when test="condition == 'writer'">
			AND USER_ID
		</when>
		<when test="condition.equals('title')">
			AND BOARD_TITLE
		</when>	
		<otherwise>
			AND BOARD_CONTENT
		</otherwise>
	</choose>
	LIKE '%${keyword}%'
	ORDER BY BOARD_NO DESC
</select>


</mapper>